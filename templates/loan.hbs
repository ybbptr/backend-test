<html>
  <head>
    <meta charset='utf-8' />
    <style>
      body { font-family: Arial, sans-serif; font-size: 12px; } h1 { text-align:
      center; text-decoration: underline; } table { width: 100%;
      border-collapse: collapse; margin-bottom: 16px; } th, td { border: 1px
      solid #000; padding: 4px; text-align: left; } .images td { text-align:
      center; vertical-align: top; } .images img { max-width: 150px; max-height:
      150px; }
    </style>
  </head>
  <body>
    <h1>FORM PENGAJUAN PEMINJAMAN ALAT INVENTARIS</h1>

    <table>
      <tr>
        <td>Nama Peminjam</td><td>{{borrower.name}}</td>
        <td>Tanggal Pinjam</td><td>{{loan_date}}</td>
      </tr>
      <tr>
        <td>NIK</td><td>{{nik}}</td>
        <td>No HP</td><td>{{phone}}</td>
      </tr>
      <tr>
        <td>Alamat</td><td colspan='3'>{{address}}</td>
      </tr>
      <tr>
        <td>Kode Pinjam</td><td>{{loanCode}}</td>
        <td>Status</td><td>{{approval}}</td>
      </tr>
    </table>

    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>Kode Barang</th>
          <th>Deskripsi</th>
          <th>Jumlah</th>
          <th>Proyek</th>
        </tr>
      </thead>
      <tbody>
        {{#each borrowed_items}}
          <tr>
            <td>{{@index}}</td>
            <td>{{product_code}}</td>
            <td>{{product.product_name}}</td>
            <td>{{quantity}}</td>
            <td>{{project.project_name}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <h3>Lampiran Foto Alat</h3>
    <table class='images'>
      <tr>
        {{#each borrowed_items}}
          <td>
            <div>{{product_code}}</div>
            {{#if product_image_url}}
              <img src='{{product_image_url}}' />
            {{else}}
              <div
                style='border:1px solid #ccc;width:150px;height:150px;display:flex;align-items:center;justify-content:center;'
              >Tidak ada gambar</div>
            {{/if}}
          </td>
        {{/each}}
      </tr>
    </table>
  </body>
</html>